<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local ="clr-namespace:FileWizard.Gui.WizardSteps">
    <DataTemplate DataType="{x:Type local:FolderSelectorViewModel}">
        <local:FolderSelectorView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:FileListViewModel}">
        <local:FileListView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:DetailsViewModel}">
        <local:DetailsView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>